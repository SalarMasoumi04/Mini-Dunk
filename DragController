1 using System;
 2 using System.Collections;
 3 using System.Collections.Generic;
 4 using UnityEngine;
 5
 6 public class DragController : MonoBehaviour
 7 {
 8     public LineRenderer line;
 9     public Rigidbody2D rb;
10
11     public float DragLimit = 3f;
12     public float ForceToAdd = 10f;
13
14     private Camera cam;
15     private bool isDragging;
16
17     Vector3 MousePosition
18     {
19         get
20         {
21             Vector3 pos = cam.ScreenToWorldPoint(Input.mousePosition);
22             pos.z = 0f;
23             return pos; 
24         }
25     }
26     private void Start()
27     {
28         cam = Camera.main;
29         line.positionCount = 2;
30         line.SetPosition(0,Vector2.zero);
31         line.SetPosition(1,Vector2.zero);
32         line.enabled = false;
33     }
34
35     private void Update()
36     {
37         if (Input.GetMouseButtonDown(0) && !isDragging)
38         {
39             DragStart();
40         }
